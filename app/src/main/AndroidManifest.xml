<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.randerath.johannes.msoplaner">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_msologo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.randerath.johannes.msoplaner.MainActivity"
            android:label="Home"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.randerath.johannes.msoplaner.HomeworkActivity"
            android:label="@string/title_activity_homework"
            android:parentActivityName="com.randerath.johannes.msoplaner.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.randerath.johannes.msoplaner.MainActivity" />
        </activity>
        <activity
            android:name="com.randerath.johannes.msoplaner.TimeTableActivity"
            android:label="@string/title_activity_time_table"
            android:parentActivityName="com.randerath.johannes.msoplaner.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.randerath.johannes.msoplaner.MainActivity" />
        </activity>
        <activity
            android:name="com.randerath.johannes.msoplaner.ExamsActivity"
            android:label="@string/title_activity_exams"
            android:parentActivityName="com.randerath.johannes.msoplaner.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.randerath.johannes.msoplaner.MainActivity" />
        </activity>
        <activity android:name="com.randerath.johannes.msoplaner.NewSubject" />
        <activity
            android:name="com.randerath.johannes.msoplaner.NewLessonActivity" android:label="Neue Unterrichtsstunde" />
        <activity
            android:name="com.randerath.johannes.msoplaner.NewExamActivity"  android:label="Neue Klausur" />
        <activity
            android:name="com.randerath.johannes.msoplaner.NewTaskActivity" android:label="Neue Aufgabe" />

        <activity android:name="com.randerath.johannes.msoplaner.Main2Activity"></activity>
    </application>

</manifest>